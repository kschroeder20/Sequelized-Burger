<div class="container" id="content">
    <div class="row d-flex justify-content-center">
        <div id="main-content" class="offset-md-1 col-md-10 col-sm-12">
            <div class="col-12 text-center">
                <img src="/assets/img/cartoon-hamburger-wallpapers.jpg">
                <h1 class="display-4" id="title">Burgers</h1>
            </div>
            <hr>
            <div class="row d-flex justify-content-center">
                <div id="main-content" class="col-md-2 col-md-8">
                    <form class="new-burger" action='api/customer' method='post'>
                        <div class="form-group">
                            <label for="customer">Customer Name</label>
                            <input type="text" name="name" class="form-control" id="customer-input" placeholder="Name">
                        </div>
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </form>
                </div>
            </div>
            <div class="row" id="devoure-row">
                <div class="col">
                    <h5 class="text-center">Enter Favorite Burger and Devoure!</h5>
                    <ul class="list-group">
                        {{#each customers}}
                            <li class="list-group-item">{{name}}</li>

                            <form action='/api/burger/{{id}}' method='post'>

                                <input type='text' name='burger_name' class="form-control"
                                    placeholder="Enter Burger Name">

                                <button type="submit" class="btn btn-secondary">Devoure!</button>
                            </form>
                            <br><br>
                        {{/each}}
                    </ul>
                </div>
                <div class="col">
                    {{#each customers}}
                        <h5 class="text-center">{{name}} Has Previously Enjoyed:</h5>
                    <ul class="list-group">
                            {{#each Burgers}}
                                {{#if devoured}}
                                    <li class="list-group-item">{{burger_name}}</li>
                                {{/if}}
                            {{/each}}
                            </ul>
                            <br><br>
                        {{/each}}
                    
                </div>
            </div>
        </div>
    </div>
</div>